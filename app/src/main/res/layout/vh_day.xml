<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/light_green"
        android:padding="16dp">

        <TextView
            android:id="@+id/date_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:padding="16dp">

        <com.patfives.steps.ui.ProgressWheel
            android:id="@+id/total_progress"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            ProgressWheel:pwBarColor="@color/light_green"
            ProgressWheel:pwBarWidth="3dp"
            ProgressWheel:pwCircleColor="@color/dark_green"
            ProgressWheel:pwRimColor="@color/pb_background"
            ProgressWheel:pwRimWidth="3dp"
            />

        <TextView
            android:id="@+id/total_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/light_green"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/average_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_steps"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/light_green"
            android:textSize="48sp" />

    </RelativeLayout>
</LinearLayout>